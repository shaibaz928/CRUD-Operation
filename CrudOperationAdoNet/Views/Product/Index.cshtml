@model IPagedList<CrudOperationAdoNet.Models.EmployeeModel>
@{
    ViewBag.Title = "Index";
}
@using PagedList.Mvc;
@using PagedList;
@using CrudOperationAdoNet.Models
<h2>Index</h2>

<a href="@Url.Action("Create","Product",new {})" class="btn btn-success">Create</a>
<br />


<table class="table table-striped table-bordered">
    <tr>
        <th>ProductId</th>
        <th>ProductName</th>
        <th>CategoryName</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductId</td>
            <td>@item.ProductName</td>
            <td>@item.CategoryName</td>
            <td>
                <a href="@Url.Action("Edit","Home",new {id=@item.ProductId})" class="btn btn-primary">Update</a>
                <a href="@Url.Action("Delete","Home",new {id=@item.ProductId})" class="btn btn-warning">Delete</a>

            </td>
        </tr>
    }
</table>

@Html.PagedListPager(Model, i => Url.Action("Index", "Product", new { i, search = Request.QueryString["search"] }))

